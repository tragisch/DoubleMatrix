# define new_local_repository rule for local installed non-Bazel libraries:
new_local_repository = use_repo_rule("@bazel_tools//tools/build_defs/repo:local.bzl", "new_local_repository")

# GNU sientific lib: provides a wide range of mathematical routines.
new_local_repository(
    name = "gsl",
    build_file = "@//:third_party/homebrew/gsl.BUILD",
    path = "/opt/homebrew",
)

# Accelerate is a framework that provides a collection of mathematical functions.
# Apples OpenBLAS implementation
new_local_repository(
    name = "accelerate",
    build_file = "@//:third_party/macos/accelerate.BUILD",
    path = "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks/Accelerate.framework/Versions/",
)

# openblas is an optimized BLAS library based on GotoBLAS2 1.13 BSD version.
new_local_repository(
    name = "openblas",
    build_file = "@//:third_party/homebrew/openblas.BUILD",
    path = "/opt/homebrew/opt/openblas/",
)

# suite-sparse is a collection of sparse matrix libraries
new_local_repository(
    name = "suitesparse",
    build_file = "@//:third_party/suitesparse.BUILD",
    path = "/opt/homebrew/opt/suite-sparse/",
)

# HDF5 is a data model, library, and file format for storing and managing data.
new_local_repository(
    name = "hdf5",
    build_file = "@//:third_party/homebrew/hdf5.BUILD",
    path = "/opt/homebrew/opt/hdf5",
)

